<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>
<% if @task.completed %>
<i class="fa-solid fa-square-check"></i>
<%= "This task is completed" %>
<% else %>
<i class="fa-solid fa-square"></i>
<%= "This task is not completed yet" %>
<% end %>
</p>


<%= link_to "Edit task", task_edit_path %>
<%= link_to "Back to list", tasks_path %>
